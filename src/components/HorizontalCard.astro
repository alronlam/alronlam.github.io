---
const {
  title,
  img,
  desc,
  url,
  github_url,
  badge,
  tags,
  activate_tag_url = true,
  target = "_blank",
} = Astro.props;
import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        {
          github_url && (
            <>
              <a
                class="link flex items-center"
                href={github_url}
                target="_blank"
              >
                <Image
                  src="/github_icon.png"
                  width={20}
                  height={20}
                  alt="GitHub"
                  class="mr-2"
                />
                GitHub
              </a>
            </>
          )
        }
        <div class="card-actions justify-end mt-3">
          {
            tags &&
              tags.map((tag) =>
                activate_tag_url ? (
                  <a href={`${tag_url}/${tag}`} class="badge badge-outline">
                    {tag}
                  </a>
                ) : (
                  <div class="badge badge-outline">{tag}</div>
                ),
              )
          }
        </div>
      </div>
    </div>
  </a>
</div>
